<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="#000000">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#80000000"
        android:padding="12dp"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Document Scanner"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />

        <!-- Orientation Toggle Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLandscape"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="L"
            android:textSize="12sp"
            android:minWidth="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            app:cornerRadius="4dp"
            android:layout_marginEnd="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPortrait"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="P"
            android:textSize="12sp"
            android:minWidth="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:backgroundTint="#757575"
            android:textColor="#FFFFFF"
            app:cornerRadius="4dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRatio"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="3:4"
            android:textSize="12sp"
            android:minWidth="56dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            app:cornerRadius="4dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnFlash"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/btn_star_big_on"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Flash"
            android:tint="#FFFFFF"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btnFlipCamera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Flip Camera"
            android:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="16dp">

        <!-- Thumbnails RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerThumbnails"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:visibility="gone" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_camera"
                app:tint="#FFFFFF"
                app:backgroundTint="#4CAF50"
                android:layout_marginHorizontal="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Done"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_save"
                app:backgroundTint="#FF9800"
                android:visibility="gone"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
