<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Notebook"
            app:titleTextColor="@android:color/white" />

        <!-- GoodNotes Style Tool Toolbar -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:scrollbars="none"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical">

                <!-- Pen Tool -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDrawMode"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:text="ðŸ–Šï¸"
                    android:textSize="22sp"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />

                <!-- Eraser Tool -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEraser"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:text="ðŸ§¹"
                    android:textSize="22sp"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />

                <!-- Text Tool -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTextMode"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:text="Aa"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />

                <!-- Lasso Select Tool - HIDDEN (functionality moved to Text mode) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLassoMode"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:text="âš†"
                    android:textSize="22sp"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />

                <!-- Shapes Tool -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShapes"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:text="â–¢"
                    android:textSize="22sp"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />

                <!-- Photo Tool -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPhotoMode"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:text="ðŸ–¼ï¸"
                    android:textSize="22sp"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />

                <!-- Sticky Note Tool -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStickyNote"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:text="ðŸ“"
                    android:textSize="22sp"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />

                <!-- Laser Pointer Tool -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLaser"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:text="ðŸ”´"
                    android:textSize="22sp"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />

                <!-- Voice Tool -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVoiceMode"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:text="ðŸŽ¤"
                    android:textSize="22sp"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />
                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:text="ðŸ’¾"
                    android:textSize="22sp"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />
                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@color/outline_variant" />

                <!-- Undo -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUndo"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:text="â†¶"
                    android:textSize="26sp"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />

                <!-- Redo -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRedo"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:text="â†·"
                    android:textSize="26sp"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </HorizontalScrollView>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Canvas Area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:background="#FFFFFF"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:fadeScrollbars="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.notex.MultiPageCanvasView
                android:id="@+id/multiPageCanvas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" />

            <!-- Add Page Button at Bottom Center -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddPage"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="40dp"
                android:text="âž• Add Page"
                android:textSize="16sp"
                android:paddingHorizontal="32dp"
                android:paddingVertical="12dp"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/accent" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Minimal Scroll/Hand Mode Button (just icon, no background) -->
    <TextView
        android:id="@+id/fabScrollMode"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="24dp"
        android:text="ðŸ–ï¸"
        android:textSize="40sp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/transparent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
