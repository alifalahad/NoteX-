<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="30" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.notex_desktop.controllers.LoginController"
      stylesheets="@../styles/styles.css" styleClass="login-page">
    <padding>
        <Insets top="60" right="40" bottom="60" left="40"/>
    </padding>

    <!-- Logo -->
    <VBox alignment="CENTER" spacing="5">
        <HBox alignment="CENTER" spacing="0">
            <Label text="N" styleClass="login-logo-n">
                <font>
                    <Font name="System Bold" size="48"/>
                </font>
            </Label>
            <Label text="++" styleClass="login-logo-plus">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>
        </HBox>
    </VBox>

    <!-- Welcome Text -->
    <VBox alignment="CENTER" spacing="8">
        <Label text="Welcome Back" styleClass="login-title">
            <font>
                <Font name="System Bold" size="32"/>
            </font>
        </Label>
        <Label text="Sign in to continue" styleClass="login-subtitle">
            <font>
                <Font size="14"/>
            </font>
        </Label>
    </VBox>

    <!-- Login Form Card -->
    <VBox spacing="20" alignment="CENTER" maxWidth="450" styleClass="login-card">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Username Field -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-container">
            <Label text="ðŸ‘¤" styleClass="input-icon">
                <font>
                    <Font size="20"/>
                </font>
            </Label>
            <TextField fx:id="usernameField" promptText="Username or Email" 
                       styleClass="input-field-login" HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Password Field -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-container">
            <Label text="ðŸ”’" styleClass="input-icon">
                <font>
                    <Font size="20"/>
                </font>
            </Label>
            <StackPane HBox.hgrow="ALWAYS">
                <PasswordField fx:id="passwordField" promptText="Password" 
                               styleClass="input-field-login"/>
                <TextField fx:id="passwordTextField" promptText="Password" 
                          styleClass="input-field-login" visible="false"/>
            </StackPane>
            <Label text="ðŸ‘" styleClass="input-icon-right" onMouseClicked="#togglePasswordVisibility">
                <font>
                    <Font size="18"/>
                </font>
            </Label>
        </HBox>

        <!-- Error Label -->
        <Label fx:id="errorLabel" styleClass="error-label" visible="false" managed="false"/>

        <!-- Login as User Button -->
        <Button fx:id="loginUserButton" text="ðŸ‘¤ Login as User" onAction="#handleUserLogin" 
                styleClass="btn-login-user" prefWidth="390" prefHeight="50">
            <font>
                <Font name="System Bold" size="16"/>
            </font>
        </Button>

        <!-- Login as Admin Button -->
        <Button fx:id="loginAdminButton" text="ðŸ›¡ Login as Admin" onAction="#handleAdminLogin" 
                styleClass="btn-login-admin" prefWidth="390" prefHeight="50">
            <font>
                <Font name="System Bold" size="16"/>
            </font>
        </Button>
    </VBox>

    <!-- Register Link -->
    <HBox alignment="CENTER" spacing="5">
        <Label text="Don't have an account?" styleClass="register-text">
            <font>
                <Font size="14"/>
            </font>
        </Label>
        <Hyperlink fx:id="registerLink" text="Register" onAction="#handleRegister" styleClass="register-link-purple">
            <font>
                <Font name="System Bold" size="14"/>
            </font>
        </Hyperlink>
    </HBox>
</VBox>
